  <%= render "shared/navbar" %>

  <!-- DIV Container -->
  <div class="home-container min-vh-100">

    <!-- DIV Section Help -->
    <div class="home-hero position-relative shadow-sm">
        <!-- Images de fond -->
        <%= image_tag "heart_2.png", class: "home-bg-img home-bg-left" %>
        <%= image_tag "ambu.png", class: "home-bg-img home-bg-right" %>
      <!-- CARD -->
      <div class="bg-blur rounded-4 p-4 text-center shadow-lg mt-5">
        <div class="d-flex justify-content-center gap-2 mb-2">
          <%= image_tag "emergency-2.png", alt: "Urgence", class: "home-icon" %>
          <h2>Besoin d'aide ?</h2>
        </div>
        <p class="p-secondary fs-m">Restez calme<br>et laissez-vous guider</p>
        <%= link_to chats_path, class: "btn-help d-flex align-items-center justify-content-center gap-2 w-100", data: { turbo_method: :post } do %>
          <i class="ph-bold ph-first-aid"></i>
          <span>Aidez-moi</span>
        <% end %>
      </div>
    </div>

    <!-- DIV Section Renseignements -->
    <div class="ps-3 py-3">
      <p class="fs-m mb-3">Renseignements</p>

      <div class="scrolling-cards d-flex gap-3 pb-2">
        <!-- Card Défibrilateurs -->
        <%= link_to "#", class: "card scrolling-card shadow-sm flex-shrink-0" do %>
          <div class="d-flex align-items-center gap-2 mb-2 fw-semibold">
            <i class="ph-bold ph-lightning"></i>
            <p>Défibrilateurs</p>
          </div>
          <img src="https://about-france.com/cities/citypix/plan-nantes.jpg" alt="Carte">
        <% end %>

        <!-- Card Simulations -->
        <%= link_to "#", class: "card scrolling-card shadow-sm flex-shrink-0" do %>
          <div class="d-flex align-items-center gap-2 mb-2 text-dark fw-semibold">
            <i class="ph-bold ph-ambulance"></i>
            <p>Simulations</p>
          </div>
            <img src="https://www.shutterstock.com/image-vector/illustration-first-medical-aid-indirect-260nw-2516317979.jpg"
  alt="Simulation">
        <% end %>
      </div>
    </div>

  </div>
