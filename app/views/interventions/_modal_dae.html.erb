<%= link_to "Aller à cette adresse","https://www.google.com/maps/dir/?api=1&destination=#{@daes.first.lat},#{@daes.first.long}", target: "_blank" %>
<p>Le plus proche se trouve <%= @daes.first.street %></p>
<div style="width: 100%; height: 300px;"
  data-controller="map"
  data-map-intervention-id-value="<%= @intervention.id %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
  data-map-lat-value="<%= params[:lat] %>"
  data-map-long-value="<%= params[:long] %>"
  <%# ligne supprimée, regarder .txt %>
  data-map-dae-long-value="<%= @daes.first.long %>"
  data-map-dae-lat-value="<%= @daes.first.lat %>"
  data-map-interactive-value="true"
  data-map-target="mapContainer">
</div>
