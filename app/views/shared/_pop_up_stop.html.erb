<div class="pop-up-overlay d-none" data-pop-up-target="modal">
  <div class="container-pop-up">
    <div class="card-pop-up d-flex flex-column gap-2">
      <div class="card-img-recap">
        <%= image_tag "first-aid-kit.png" %>
      </div>
      <div class="title-pop-up">
        <h3>Êtes-vous sûr de vouloir arrêter l'intervention ?</h3>
      </div>

      <div class="d-grid gap-2">
        <div class="btn btn-primary" type="button">
          <%= link_to recap_intervention_path(intervention, case_id: case_id, lat: params[:lat], long: params[:long], city: params[:city], address: params[:address]), class: "btn btn-primary" do %>
          <p class="fs-m">Oui, les secours sont arrivés</p>
          <% end %>
        </div>

        <div class="btn btn-light" type="button">
          <%= link_to recap_intervention_path(intervention, case_id: case_id, lat: params[:lat], long: params[:long], city: params[:city], address: params[:address]), class: "btn btn-light" do %>
          <p class="fs-m btn-two">Oui, tout vas bien finalement</p>
          <% end %>
        </div>

        <div class="btn btn-secondary" type="button">
          <%= link_to "", class: "btn btn-secondary", data: { action: "click->pop-up#return" } do %>
          <p class="fs-m">Non, je continue</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
