<div class="devise position-relative d-flex align-items-center justify-content-center">

  <!-- Images de fond -->
  <%= image_tag "doctor.png", class: "devise-bg-img devise-bg-left" %>
  <%= image_tag "hospital.png", class: "devise-bg-img devise-bg-right" %>
  <!-- CARD -->
  <div class="devise-cta-card bg-blur p-3 w-100">

    <h2 class="mb-4 text-center">Se connecter</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions mb-3">
        <%= f.button :submit, "Connexion", class: "btn btn-primary btn-lg rounded w-100" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>

</div>
